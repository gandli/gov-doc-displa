//   url      = env("DATABASE_URL") // 数据库连接字符串
// }
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // SQLite 数据库文件路径
}

// 数据模型
model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String // 添加分类字段
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Visitor {
  id               Int       @id @default(autoincrement())
  name             String
  gender           String
  idCard           String
  phone            String
  visitTime        DateTime
  purpose          String
  documentNumber   String?
  caseNumber       String?
  processingStatus String?
  processingTime   DateTime?
}

