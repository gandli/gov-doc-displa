// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

// 数据源配置
datasource db {
  provider = "postgresql" // 数据库类型：可以是 postgresql, mysql, sqlite, sqlserver
  url      = env("DATABASE_URL") // 数据库连接字符串
}

// 数据模型
model Article {
  id      Int    @id @default(autoincrement())
  title   String
  content String
}

model Visitor {
  id               Int       @id @default(autoincrement())
  name             String
  gender           String
  idCard           String
  phone            String
  visitTime        DateTime
  purpose          String
  documentNumber   String?
  caseNumber       String?
  processingStatus String?
  processingTime   DateTime?
}
